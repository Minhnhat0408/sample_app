<% provide :title, t("auth.log_in") %>
<h1><%= t "auth.log_in" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email, t("sessions.new.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t("sessions.new.password") %>
      <%= link_to t("forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "sessions.new.remember" %></span>
      <% end %>
      <%= f.submit t("sessions.new.login"), class: "btn btn-primary" %>
    <% end %>
    <p>
      <%= t "auth.new_user?" %>
      <%= link_to t("auth.sign_up_now"), signup_path %>
    </p>
  </div>
</div>
